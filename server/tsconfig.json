{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext", 
    "moduleResolution": "node", 
    "esModuleInterop": true, 
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "dist",
    "rootDir": "src",
    "jsx": "react-jsx" 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
